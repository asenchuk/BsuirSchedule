<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_checked_as_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/choosen_as_default_mark"
        android:textColor="#000"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/item_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_update_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_group_name"
            android:layout_marginRight="5dp"
            android:text="@string/schedules_list_item_update_date_label"
            android:textColor="#000" />

        <TextView
            android:id="@+id/item_update_date_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_checked_as_default"
            android:layout_alignTop="@id/item_update_date_label"
            android:layout_toRightOf="@id/item_update_date_label"
            android:textColor="#000" />
    </RelativeLayout>

</LinearLayout>